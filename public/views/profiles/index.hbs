<div class="container-fluid bg-white">
    <div class="row header">
        <div class="col-md-12 d-flex justify-content-center p-3"><img src="/images/logo.svg">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-center">
            Teresa Winata
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            ultipage.id/mangome
        </div>
    </div>

    <section class="form m-3">
        <div class="row">
            <div class="col-sm-12">
                <form action="{{ host }}/login" method="post">
                    <div class="auth-box card">
                        <div class="card-block card p-4 m-4">
                            <div class="text-left mb-3">
                                New user? <a href="#"><b>Create an account</b></a>
                            </div>
                            <div class="form-group form-primary"> <input type="text" class="form-control" value=""
                                    placeholder="Mobile number" name="username" id="username"> </div>
                            <div class="form-group form-primary d-flex w-100 mb-1" id="show_hide_password"> <input
                                    type="password" class="form-control" name="password" placeholder="Password" value=""
                                    id="password">
                                <div class="input-group-addon">
                                    <a class="d-flex h-100" href=""><i
                                            class="fa fa-eye-slash justify-content-center align-self-center"
                                            aria-hidden="true"></i></a>
                                </div>
                            </div>
                            <a href="#" class="mt-1 d-flex justify-content-end">Forgot your password?</a>

                            <div class="row mt-5">
                                <div class="col-md-12 mt-4 text-right"> <input type="submit"
                                        class="btn btn-primary waves-effect px-4 text-center" name="submit"
                                        value="Sign in">
                                </div>
                            </div>
                            <div class="or-container">
                                <div class="line-separator"></div>
                                <div class="or-label">or</div>
                                <div class="line-separator"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-12"> <a
                                        class="btn btn-lg btn-google btn-block text-uppercase btn-outline" href="#"><img
                                            src="{{ host_no_basepath }}/{{ basepath }}/images/google-logo.png"> Signup Using
                                        Google</a> </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>