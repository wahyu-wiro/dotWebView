<div class="global-container">
    <div class="container-fluid d-flex flex-column justify-content-center align-items-center bg-white p-0 h-100">
        {{>header}}
        <section class="setting p-3 m-0 w-100 h-100 flex-grow-1 d-flex flex-column h-100">
            <div class="form-group d-flex w-100 px-0 pt-3">
                <div class="col-sm-12 col-12 px-0 pt-1">
                    <label>{{#if language }}{{ language.language }}{{else}}Language{{/if}}</label>
                    {{#if data }}
                        <label class="form-radio f14">English
                            <input type="radio" name="radio" value="en" {{#ifEquals data.language 'en' }} checked="checked" {{/ifEquals}}>
                            <span class="checkmark"></span>
                        </label>
                        <label class="form-radio f14">Indonesia
                            <input type="radio" name="radio" value="id" {{#ifEquals data.language 'id' }} checked="checked" {{/ifEquals}}>
                            <span class="checkmark"></span>
                        </label>
                    {{else}}
                        <label class="form-radio f14">English
                            <input type="radio" checked="checked" name="radio" value="en">
                            <span class="checkmark"></span>
                        </label>
                        <label class="form-radio f14">Indonesia
                            <input type="radio" name="radio" value="id">
                            <span class="checkmark"></span>
                        </label>
                    {{/if}}
                </div>
            </div>

        </section>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.2.0/bootbox.min.js'></script>

<script>
    $(document).ready(function () {
        $(':input[type="radio"]').click(function(e) {
            e.preventDefault();
            var data = JSON.stringify({"language": e.currentTarget.value });
            //console.log('data =>',changeLangaugeLink)
            $.post("{{ host }}"+"/account/changelangauge",{data:data}).done(function(result){
                window.location.href = "{{ host }}" + "/setting/";
            });
        })
        $('.form-radio').click(function(e) {
            spinner.show();
        })
    })
</script>